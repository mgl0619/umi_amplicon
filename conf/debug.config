// Debug configuration for pipeline testing
// This config enables extensive logging and debugging options

process {
    // Enable debug mode for all processes
    debug = true
    
    // Show command line for debugging
    echo = true
    
    // Enable shell debugging
    shell = ['/bin/bash', '-euo', 'pipefail']
    
    // Resource limits for debugging (smaller to test faster)
    cpus = 2
    memory = '4.GB'
    time = '1.h'
    
    // Enable error reporting
    errorStrategy = 'terminate'
    maxRetries = 1
    maxErrors = 1
}

// Nextflow debugging options
nextflow {
    // Enable verbose logging
    logLevel = 'debug'
    
    // Show process names and timing
    showName = true
    showTimeline = true
    
    // Enable execution report
    report = 'debug_report.html'
    timeline = 'debug_timeline.html'
    trace = 'debug_trace.txt'
    
    // Enable work directory cleanup on error (for debugging)
    clean = false
}

// Environment variables for debugging
env {
    NXF_DEBUG = 1
    NXF_ANSI_LOG = false
}

