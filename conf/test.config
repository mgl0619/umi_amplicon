// Profile config names for nf-core/configs
params {
    config_profile_name = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input = 'assets/samplesheet_test.csv'
    
    // UMI parameters
    umi_length = 12
    umi_pattern = 'NNNNNNNNNNNN'
    umi_method = 'directional'
    umi_quality_threshold = 10
    umi_collision_rate_threshold = 0.1
    umi_diversity_threshold = 1000
    
    // Skip certain steps for testing
    skip_alignment = true
    skip_feature_counting = true
    skip_umi_qc = true
    skip_umi_analysis = false
    skip_report = false
}

// Docker-only configuration
process {
    container = 'docker'
}

